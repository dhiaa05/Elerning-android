<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity"
    android:background="@color/bkackapp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/img_login" />
    <Button
        android:id="@+id/logEtud"
        android:layout_width="320dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:text="Log In Etudiant"
        android:background="@color/vertapp"
        android:textColor="@color/color_text_button"
        android:layout_marginTop="40dp"
        />
    <Button
        android:id="@+id/logEns"
        android:layout_width="320dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/logEtud"
        android:text="Log In Enseinant"
        android:onClick="logIn"
        android:background="@color/vertapp"
        android:textColor="@color/color_text_button"
        android:layout_marginTop="40dp"

        />

    <Button
        android:id="@+id/log"
        android:layout_width="320dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/logEns"
        android:text="Log In"
        android:onClick="logIn"
        android:background="@color/vertapp"
        android:textColor="@color/color_text_button"
        android:layout_marginTop="40dp"

        />

    <Button
        android:id="@+id/go_registre"
        android:layout_width="320dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/log"
        android:text="Register"
        android:onClick="verfication"
        android:background="@color/vertapp"
        android:textColor="@color/color_text_button"
        tools:ignore="DuplicateIds"
        android:layout_marginTop="40dp"

        />











    -->

</RelativeLayout>